# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nas_music_downloader

# JWT Security
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
OUTPUT_DIRECTORY=/app/downloads
DEBUG=false

# Docker Compose host path for downloads (used by docker-compose.yml)
# Set this to a local or NAS path on the host machine. If not set, compose uses ./downloads
# Example on Windows: E:/Downloads
# Example on Linux:  /home/you/Music
# Example on macOS:  /Users/you/Music
# DOWNLOADS_HOST_PATH=
