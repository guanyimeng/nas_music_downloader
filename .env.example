# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nas_music_downloader

# JWT Security
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
OUTPUT_DIRECTORY=/app/downloads
DEBUG=false

# For NAS deployment, mount your music folder to /app/downloads
# Example NAS paths:
# Synology: /volume1/music
# QNAP: /share/music
# TrueNAS: /mnt/pool/music
